{
  "id": "${artifactId}-${version}",
  "name": "Finances",
  "requires": [],
  "provides": [
    {
      "id": "finances",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/finances",
          "permissionsRequired": ["finances.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/finances",
          "permissionsRequired": ["finances.item.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/finances/{id}",
          "permissionsRequired": ["finances.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/finances/{id}",
          "permissionsRequired": ["finances.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/finances/{id}",
          "permissionsRequired": ["finances.item.delete"]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "finances.collection.get",
      "displayName": "Finances - get finances collection",
      "description": "Get finances collection"
    },
    {
      "permissionName": "finances.item.get",
      "displayName": "Finances - get individual finance from storage",
      "description": "Get individual finance"
    },
    {
      "permissionName": "finances.item.post",
      "displayName": "Finances - create finance",
      "description": "Create finance"
    },
    {
      "permissionName": "finances.item.put",
      "displayName": "Finances - modify finance",
      "description": "Modify finance"
    },
    {
      "permissionName": "finances.item.delete",
      "displayName": "Finances - delete finance",
      "description": "Delete finance"
    },
    {
      "permissionName": "finances.all",
      "displayName": "Finances module - all permissions",
      "description": "Entire set of permissions needed to use the finances module",
      "subPermissions": [
        "finances.collection.get",
        "finances.item.get",
        "finances.item.post",
        "finances.item.put",
        "finances.item.delete"
      ],
      "visible": false
    }
  ],
  "metadata": {
    "containerMemory": "256",
    "databaseConnection": "true"
  },
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8081/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false
  }
}
